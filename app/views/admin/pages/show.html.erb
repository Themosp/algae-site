<h1>Showing page</h1>

<p>
  <strong>ID:</strong>
  <%= @page.slug %>
</p>

<p>
  <strong>Title:</strong>
  <%= @page.title %>
</p>

<p>
  <strong>Image:</strong>
  <%= link_to @page.image.title, [:admin, @page.image] if @page.image.present? %>
</p>

<p>
  <strong>Big image:</strong>
  <%= @page.big_image %>
</p>

<p>
  <strong>Image link:</strong>
  <%= @page.image_link %>
</p>

<p>
  <strong>Body:</strong>
  <%= @page.body.html_safe %>
</p>

<%= link_to 'Edit', [:edit, :admin, @page], class: 'btn btn-warning' %>
<%= link_to 'Back', [:admin, :pages], class: 'btn btn-default' %>
