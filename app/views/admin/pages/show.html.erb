<h1>Showing page</h1>

<p>
  <strong>ID:</strong>
  <%= @page.id %>
</p>

<p>
  <strong>Slug:</strong>
  <%= @page.slug %>
</p>

<p>
  <strong>Title:</strong>
  <%= @page.title %>
</p>

<p>
  <strong>Image:</strong>
  <%= link_to @page.image.title, [:admin, @page.image] if @page.image.present? %>
</p>

<p>
  <strong>Big image:</strong>
  <%= @page.big_image %>
</p>

<p>
  <strong>Back link:</strong>
  <%= link_to @page.back_link.title, [:admin, @page.back_link] if @page.back_link.present? %>
</p>

<p>
    <strong>Back link for:</strong>
    <%= @page.back_linked_pages.map { |page| link_to page.title, [:admin, page] }.join(', ').html_safe %>
</p>

<p>
  <strong>Body:</strong>
  <%= @page.body.html_safe %>
</p>

<%= link_to 'Edit', [:edit, :admin, @page], class: 'btn btn-warning' %>
<%= link_to 'View in public', polymorphic_path(@page.url, for_locale: nil, locale: params[:for_locale]), class: 'btn btn-info' %>
<%= link_to 'Back', [:admin, :pages], class: 'btn btn-default' %>
