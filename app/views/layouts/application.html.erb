<!DOCTYPE html>
<html>
<head>
    <title>Algae farms</title>
    <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
    <%= stylesheet_link_tag    "http://fonts.googleapis.com/css?family=Open+Sans:400,700,300&subset=latin,greek-ext" %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
</head>
<body>

<div class="container">
    <div class="logo">
        <%= link_to image_tag('logo.png', width: 243, height: 65), root_path %>
    </div>

    <nav class="languages">
        <a href="#">GR</a>
        <a href="#">EN</a>
    </nav>

    <nav class="menu">
        <%= link_to 'Η εταιρία', root_path %>
        <%= link_to 'Οικονομικά στοιχεία', financial_path %>
        <%= link_to 'Προϊόντα', products_path %>
        <%= link_to 'Πιστοποιήσεις', certifications_path %>
        <%= link_to 'Επικοινωνία', contact_path %>
        <%= link_to 'Ευκαιρίες καριέρας', careers_path %>

        <div class="search">
            <input type="search" />
            <input type="submit" value="Search" />
        </div>
    </nav>

    <div class="clear"></div>

    <%= yield %>

    <div class="clear"></div>

    <nav class="menu-bottom">
        <%= link_to 'Sitemap', sitemap_path %>
        /
        <%= link_to 'Cookies', cookies_path %>
        /
        <%= link_to 'Όροι χρήσης', terms_path %>

        <div class="follow-us">
            follow us:
            <%= link_to image_tag('facebook.png', width: 25, height: 25), '#' %>
            <%= link_to image_tag('twitter.png', width: 25, height: 25), '#' %>
        </div>
    </nav>


    <div class="copyright">
        Copyright &copy; 2013, ALGAE FARMS, All rights reserved.
    </div>
</div>
</body>
</html>
